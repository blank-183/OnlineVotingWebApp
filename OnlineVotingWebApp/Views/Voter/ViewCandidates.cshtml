@model IEnumerable<Candidate>
@{
    ViewData["Title"] = "View Candidates";
}
<div class="background-div p-4 text-center align-items-center justify-content-center">
    <h1 class="text-center text-white m-2"><strong>OFFICIAL CANDIDATES IN THE PHILIPPINES' @DateTime.Now.Year NATIONAL ELECTIONS</strong></h1>
</div>

<div class="container bg-white p-5">
    @foreach (var position in ViewBag.CandidatePositions)
    {
        <div class="bg-dark p-1 text-center">
            <h3 class="text-white mt-2"><strong>@position.CandidatePositionName.ToUpper()</strong></h3>
        </div>
        <hr />
        <div class="row g-3 my-4">
            @{
                var candidates = Model.Where(e => e.CandidatePositionId == position.CandidatePositionId);
            }
            @foreach (var candidate in candidates)
            {
                <div class="col-md-6 col-lg-4 px-3 my-3">
                    <div class="card py-3 card-shadow" style="border-radius: 0;">
                        <div class="card-body text-center">
                            <img src="~/img/candidate/@candidate.Photo" class="rounded-circle mb-3" alt="" style="width:200px; height:200px; object-fit:cover; border: 5px solid lightgray">
                            <div class="bg-white border">
                                @*<div class="card-title text-white bg-dark">
                        <h3 class="mt-3">@candidate.FullName.ToUpper()</h3>
                        </div>
                        <hr />
                        <p class="lead px-1">
                        Party: @candidate.Party
                        </p>*@
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item bg-dark text-white"><strong>@candidate.FullName.ToUpper()</strong></li>
                                    <li class="list-group-item">Party: @candidate.Party</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>