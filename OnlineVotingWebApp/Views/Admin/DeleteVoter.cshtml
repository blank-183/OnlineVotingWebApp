@model DeleteVoterViewModel

@{
    ViewData["Title"] = "Delete Voter";
}

<div class="container w-50 container-login p-4" style="min-width: 400px;">
    <h3 class="mb-3">Delete Voter</h3>
    <form method="post">
        <div class="row mb-4 g-3">
            <div class="col-12">
                <label class="form-label">Voter ID</label>
                <input type="text" class="form-control" asp-for="VoterId" readonly>
            </div>
            <div class="col-md-4">
                <label class="form-label">First Name</label>
                <input type="text" class="form-control" asp-for="FirstName" readonly>
            </div>
            <div class="col-md-4">
                <label class="form-label">Middle Name</label>
                <input type="text" class="form-control" asp-for="MiddleName" readonly>
            </div>
            <div class="col-md-4">
                <label class="form-label">Last Name</label>
                <input type="text" class="form-control" asp-for="LastName" readonly>
            </div>
        </div>
        <div class="mt-3 btn-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Admin" asp-action="ManageVoters" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
