@model CreateEventViewModel

@{
    ViewData["Title"] = "Create New Event";
}

<div class="container w-50 container-login p-4" style="min-width: 400px;">
    <h3 class="mb-3">Create New Event</h3>
    <form method="post">
        <div class="row mb-4 g-3">
            <div class="col-md-6">
                <label class="form-label">Start Date Time<span class="text-danger">*</span></label>
                <input type="datetime-local" class="form-control" asp-for="StartDateTime">
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label">End Date Time<span class="text-danger">*</span></label>
                <input type="datetime-local" class="form-control" asp-for="EndDateTime">
                <span asp-validation-for="EndDateTime" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-3 btn-group">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="Admin" asp-action="ViewEvent" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
