@model UpdateEventViewModel

@{
    ViewData["Title"] = "Delete Event";
}

<div class="container w-50 container-login p-4" style="min-width: 400px;">
    <h3 class="mb-3">Update Event</h3>
    <form method="post">
        <div class="row mb-4 g-3">
            <div class="col-12">
                <label class="form-label">Vote Event ID</label>
                <input type="text" class="form-control" asp-for="VoteEventId" readonly>
            </div>
            <div class="col-md-6">
                <label class="form-label">Start Date Time<span class="text-danger">*</span></label>
                <input type="datetime-local" class="form-control" asp-for="StartDateTime" readonly>
            </div>
            <div class="col-md-6">
                <label class="form-label">End Date Time<span class="text-danger">*</span></label>
                <input type="datetime-local" class="form-control" asp-for="EndDateTime" readonly>
            </div>
        </div>
        <div class="mt-3 btn-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Admin" asp-action="ViewEvent" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
